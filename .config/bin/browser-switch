#!/usr/bin/env bash

fitbit_specific="fitbit\.com|fitbit|urldefense\.proofpoint"
prompt="docs\.google\.com"

if [[ $# -gt 0 ]]; then
    if [[ "$1" =~ $fitbit_specific ]]; then
        browser=fitbit-chrome
    elif [[ "$1" =~ $prompt ]]; then
        browser=$(kdialog --radiolist "Select browser:" "fitbit-chrome" "Fitbit" on "personal-chrome" "Personal" off)
    else
        browser=personal-chrome
    fi
    gtk-launch $browser $1
else
    gtk-launch personal-chrome
fi
